		<ate:repeatStep id="stepRepeatApplyOtherKeywordsJobs" startStepName="stepOpenHomePage" numberOfIterations="2" endStepName="stepTypeInWindsorOn" stepName="stepRepeatApplyOtherKeywordsJobs" targetStep="false"/>
		
		<ate:lastStep id="mylaststep" stepName="mylaststep"
			stepDescription="last step close browser" targetStep="false"
			pageObject="myLastPage">
		</ate:lastStep>

	</ate:testCase>

